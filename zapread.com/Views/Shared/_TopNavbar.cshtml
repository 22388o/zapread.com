<div class="white-bg">
    <nav class="navbar navbar-expand-lg white-bg fixed-top border-bottom-nav">
        <a class="navbar-brand" href="/"><img src="~/Content/logo.png" style="width:27px;height:32px" /></a>
        <span class="navbar-text" style="color:darkgreen;font-weight: 900;">
            <a href="/" style="color:darkgreen;font-weight: 900;">Social Economy</a>
        </span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fa fa-reorder" style="font-size: 22px;"></i></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="nav navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Groups", "Index", "Group", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("FAQ", "FAQ", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Feedback", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
            @if (Request.IsAuthenticated)
            {
                <ul class="nav navbar-top-links navbar-right">
                    <li class="dropdown">
                        <a class="count-info" data-toggle="dropdown" href="#">
                            <i class="fa fa-envelope"></i>  <span id="unreadMessages" class="badge badge-warning" data-url="@Url.Action("UnreadMessages","Messages")">-</span>
                        </a>
                        <ul class="dropdown-menu dropdown-alerts dropdown-menu-right" style="overflow: auto;max-height: 500px;">
                            <li>
                                <div class="text-center link-block">
                                    <a href="@Url.Action("Index","Messages")">
                                        <i class="fa fa-envelope"></i> <strong>Read All Messages</strong>
                                    </a>
                                </div>
                            </li>
                            <li class="divider"><hr /></li>
                            @if (true)
                            {
                                Html.RenderAction(actionName: "RecentUnreadMessages", controllerName: "Messages", routeValues: new { count = 10 });
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="count-info" data-toggle="dropdown" href="#">
                            <i class="fa fa-bell"></i>  <span id="unreadAlerts" class="badge badge-primary" data-url="@Url.Action("UnreadAlerts","Messages")">-</span>
                        </a>
                        <ul class="dropdown-menu dropdown-alerts dropdown-menu-right"  style="overflow: auto;max-height: 500px;">
                            <li>
                                <div class="text-center link-block">
                                    <a href="@Url.Action("Index","Messages")">
                                        <i class="fa fa-bell"></i> <strong>See All Alerts</strong>
                                        
                                    </a>
                                </div>
                            </li>
                            <li class="divider"><hr /></li>
                            @if (true)
                            {
                                Html.RenderAction(actionName: "RecentUnreadAlerts", controllerName: "Messages", routeValues: new { count = 10 });
                            }
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a href="#" data-toggle="modal" data-target="#depositModal" class="nav-link">
                            <div class="partialContents" data-url="/Account/Balance"></div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Manage")" class="nav-link">
                            <img src="@Url.Action("UserImage", "Home", new {size = 15})" /> @User.Identity.Name
                        </a>
                        @*@Html.ActionLink(User.Identity.Name, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })*@
                    </li>
                </ul>
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-link nav-link">
                        <i class="fa fa-sign-out"></i> Log off
                    </button>
                }
            }
            else
            {
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a href="@Url.Action("Register", "Account")" class="nav-link">
                            <i class="fa fa-user-plus"></i> Register
                        </a>
                    </li>
                    <li class="nav-item">

                        <a href="@Url.Action("Login", "Account")" class="nav-link">
                            <i class="fa fa-sign-in"></i> Log in
                        </a>
                    </li>
                </ul>
            }
        </div>
    </nav>
</div>